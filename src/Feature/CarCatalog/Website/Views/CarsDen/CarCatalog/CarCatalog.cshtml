@model IEnumerable<CarsDen.Feature.CarCatalog.Models.CarModel>

<section class="section featured-car" id="featured-car">
    <div class="container">

        <div class="title-wrapper">
            <h2 class="h2 section-title">@Html.Sitecore().Field("Featured-Title")</h2>

            <a href="#" class="featured-car-link">
                <span>View more</span>

                <ion-icon name="arrow-forward-outline"></ion-icon>
            </a>
        </div>     

        <ul class="featured-car-list">
            @foreach(var item in Model)
            {

            <li>
                <div class="featured-car-card">

                    <figure class="card-banner">
                        <img src="@item.CarImage" alt="@item.CarImageAlt" 
                             loading="lazy" class="w-100" height="440" width="300"
                             >
                    </figure>

                    <div class="card-content">

                        <div class="card-title-wrapper">
                            <h3 class="h3 card-title">
                                <a href="#">@item.Model</a>
                            </h3>

                            <data class="year" value="@item.CarMakeYear">@item.CarMakeYear</data>
                        </div>

                        <ul class="card-list">

                            <li class="card-list-item">
                                <ion-icon name="people-outline"></ion-icon>

                                <span class="card-item-text">@item.Seaters</span>
                            </li>

                            <li class="card-list-item">
                                <ion-icon name="flash-outline"></ion-icon>

                                <span class="card-item-text">@item.CarFuelType</span>
                            </li>

                            <li class="card-list-item">
                                <ion-icon name="speedometer-outline"></ion-icon>

                                <span class="card-item-text">@item.CarMileage</span>
                            </li>

                            <li class="card-list-item">
                                <ion-icon name="hardware-chip-outline"></ion-icon>

                                <span class="card-item-text">@item.CarTransmission</span>
                            </li>

                        </ul>

                        <div class="card-price-wrapper">

                            <p class="card-price">
                                @item.CarRentPerDay
                            </p>

                            <button class="btn">Rent now</button>

                        </div>

                    </div>

                </div>
            </li>

            }
        </ul>

    </div>
</section>